<!DOCTYPE html>
<html>

<head>
<link href='/bower_components/datatables.net-bs4/css/dataTables.bootstrap4.min.css' rel='stylesheet' type='text/css'>
</head>

<div class="content-wrapper">
	<div class="container-fluid">
		<ol class="breadcrumb">
			<li class="breadcrumb-item active">{{texts "menu.dataLog.home"}}</li>
			<li class="breadcrumb-item active">{{texts "menu.dataLog.history"}}</li>
		</ol>


		<div class="form-group row">
			<div class="col">
				<form method="post">
					<button type="submit" class="btn btn-danger btn-mb btn-block" formmethod="post" formaction="/dataLog/delete">
						<i class="fa fa-floppy-o" aria-hidden="true"></i> {{texts "button.label.deleteAll"}}
					</button>
				</form>
			</div>
		</div>

		<div class="card">
			<div class="card-header">
				<i class="fa fa-history fc-bold"></i> {{texts "panel.header.detectedFaceLog"}}
			</div>
			<div class="card-body">
				<form method="post">
					<div class="form-group row">
						<div class="col">
							<select class="form-control" name="staffId" required="required">
								<option value="">{{texts "form.component.label.selectOne"}}</option> {{#each body.selectableStaffs}}
								<option value="{{_id}}">{{name}} {{surname}}</option> {{/each}}
							</select>
							<div class="invalid-feedback">{{texts "form.common.validation.required"}}</div>
						</div>
					</div>
					<div class="form-group row">
						<div class="col">
							<button type="submit" class="btn btn-success btn-mb btn-block" formmethod="post" formaction="/dataLog/staffFacedImages">
								<i class="fa fa-floppy-o" aria-hidden="true"></i> {{texts "button.label.save"}}
							</button>
						</div>
					</div>

					<div class="row">
						{{#each body.detectedFacedImages}}
						<div class="col-xl-3 mb-4">
							<div class="card">
								<div class="card-header">
									<i class="fa fa-calendar fc-bold"></i> {{recordDate}}
								</div>
								<div class="card-body text-center">
									<div class="form-group row">
										<div class="col">
											<img src="data:{{mimeType}};base64,{{content}}" />
										</div>
									</div>
									<div class="form-check">
										<input class="form-check-input" type="checkbox" value="{{_id}}" id="facedImageId_{{_id}}" name="facedImageIds"> <i class="fa fa-database fc-orange" aria-hidden="true"></i>
									</div>
								</div>
							</div>
						</div>
						{{/each}}
					</div>

				</form>
			</div>
		</div>





	</div>
</div>

<script src="/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="/bower_components/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="/public/javascripts/views/dataLog.js" type="text/javascript"></script>

</html>